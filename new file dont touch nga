  <script>
    // Simple helpers
    function scrollToSection(id){
      const el = document.getElementById(id);
      if(el) el.scrollIntoView({behavior:'smooth', block:'start'});
    }

    // Modal logic
    const modalBackdrop = document.getElementById('modalBackdrop');
    const selectedPlan = document.getElementById('selectedPlan');
    const selectedPlanLabel = document.getElementById('selectedPlanLabel');

    function openOrderModal(plan = 'Basic', price = '$50') {
      selectedPlan.value = plan + ' • ' + price;
      selectedPlanLabel.textContent = 'Selected: ' + plan + ' — ' + price;
      modalBackdrop.style.display = 'flex';
      modalBackdrop.setAttribute('aria-hidden','false');
      // focus first input
      setTimeout(()=> document.querySelector('#orderForm input[name="name"]').focus(), 120);
    }

    function closeModal(){
      modalBackdrop.style.display = 'none';
      modalBackdrop.setAttribute('aria-hidden','true');
      document.getElementById('orderForm').reset();
      selectedPlan.value = '';
    }

    // Details quick view (simple alert — replace with richer UI if desired)
    function showDetails(plan){
      const details = {
        Basic: 'Basic — up to 3 pages, responsive, contact form, basic SEO, 1 revision.',
        Advanced: 'Advanced — up to 6 pages, CMS-ready, on-page SEO, 2 revisions.',
        Business: 'Business — up to 12 pages, e-commerce + analytics, 4 revisions, priority support.'
      };
      alert(details[plan] || 'Details coming soon.');
    }

    // Fake submit (replace with API call to your backend or payment flow)
    function submitOrder(e){
      e.preventDefault();
      const form = e.target;
      const data = new FormData(form);
      const payload = Object.fromEntries(data.entries());
      // Basic validation
      if(!payload.name || !payload.email || !payload.plan){
        alert('Please complete name, email and choose a plan.');
        return;
      }

      // Simulate submission: replace with fetch() to your server endpoint if available.
      console.log('--- StartSite ORDER SUBMIT ---');
      console.log(payload);
      console.log('-----------------------------');

      // Friendly message to user
      alert('Thanks ' + payload.name.split(' ')[0] + '! We received your order request for ' + payload.plan + '. We will email you within 24 hours to confirm next steps.');
      closeModal();
    }

    // Close modal on Escape
    document.addEventListener('keydown', (e)=> {
      if(e.key === 'Escape' && modalBackdrop.style.display === 'flex') closeModal();
    });

    // Accessibility: trap focus inside modal when open (simple)
    document.addEventListener('focus', function(event){
      if(modalBackdrop && modalBackdrop.style.display === 'flex' && !modalBackdrop.contains(event.target)){
        event.stopPropagation();
        modalBackdrop.querySelector('input, button, textarea').focus();
      }
    }, true);

    // Small enhancement: pre-fill plan when clicking the main hero CTA
    // (hero CTA already calls openOrderModal() with defaults)
  </script>
</body>
</html>
